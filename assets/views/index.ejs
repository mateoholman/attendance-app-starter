<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Attendance App</title>

  <!-- Latest compiled and minified Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="./css/custom.css" type="text/css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Lobster|Roboto+Mono" rel="stylesheet">
  
</head>

<body>
<h1>Welcome to <%= courseInfo.courseTitle %></h1>
<p><%= courseInfo.courseMessage %></p>
<hr />

<form method="POST" action="/" class="form-inline">
  <div class="form-group">
    <label class="sr-only" for="inputName">Name</label>
    <input type="text" name="name" class="form-control" placeholder="First Last">
  </div>
  <button type="submit" class="btn btn-default">Check in</button>
</form>

<hr />
<div id="studentTable" class="col-xs-4 col-xs-offset-4 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4">
  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th>Name</th>
      <th>Check-ins</th>
    </tr>
    <% courseInfo.courseStudents.forEach(function(student) { %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.attendance %></td>
      </tr>
    <% }) %>
  </table>
</div>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Latest compiled and minified Bootstrap JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>

</html>
